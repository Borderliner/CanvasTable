{
  "compilerOptions": {
    "lib": ["dom", "es6", "es5", "es2016.array.include", "es2015.promise", "es2017.object", "es2020"],
    "target": "ESNext",
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "jsxFactory": "h",
    "typeRoots" : ["./typings"],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
